{
  "name": "electron-wiba-app",
  "version": "1.0.0",
  "description": "",
  "main": "dist/main.js",
  "scripts": {
    "build:main": "webpack --config webpack.main.config.js",
    "build:renderer": "webpack --config webpack.renderer.config.js",
    "build:plugin": "webpack --config webpack.plugin.config.js ",
    "build:backend": "cd ../java-local-server && mvn package -Pproduct",
    "copy:backend": "rm -rf dist/java-local-server&&mkdir -p dist/java-local-server && cp ../java-local-server/target/*-product.jar dist/java-local-server/",
    "build:all": "npm run build:backend && npm run copy:backend && npm run build",
    "build": "npm run build:main && npm run build:renderer",
    "start": "npm run build && electron .",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:win": "npm run build && electron-builder --win",
    "dist:linux": "npm run build && electron-builder --linux",
    "test": "mocha 'test/**/*.mjs' --experimental-modules"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.7.9",
    "chokidar": "^4.0.3",
    "electron-store": "^8.2.0",
    "marked": "^15.0.4",
    "openai": "^4.77.0",
    "puppeteer": "^23.8.0",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "string-similarity": "^4.0.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.26.4",
    "@babel/core": "^7.26.0",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-object-rest-spread": "^7.20.7",
    "@babel/plugin-transform-modules-commonjs": "^7.26.3",
    "@babel/preset-env": "^7.26.0",
    "@babel/register": "^7.25.9",
    "babel-loader": "^9.2.1",
    "chai": "^5.1.2",
    "copy-webpack-plugin": "^12.0.2",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "html-webpack-plugin": "^5.6.3",
    "mocha": "^11.0.1",
    "webpack": "^5.97.1",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.0",
    "webpack-node-externals": "^3.0.0"
  },
  "build": {
    "appId": "com.wibo.wibo-client",
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "path/to/extra/resources",
        "to": "resources",
        "filter": [
          "**/*"
        ]
      }
    ]
  }
}
